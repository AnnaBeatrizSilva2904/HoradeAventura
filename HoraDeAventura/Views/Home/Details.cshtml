@{
    ViewData["Title"] = "Personagem";
    var Categorias = (List<Categoria>)ViewData["Categorias"];
    string Cor(string nome)
    {
        return Categorias
            .Where(t => t.Nome == nome)
            .Select(t => t.Cor)
            .FirstOrDefault();
    }
}
        
        <section class="pt-5 container">
			<div class="row">
				@*<div class="col text-center">
					<a href="#" class="btn btn-lg btn-outline-dark">Finn</a>
				</div>*@
				<div class="col text-center">
					<h1 class="fs-1">@Model.Nome</h1>
				</div>
				@*<div class="col text-center">
					<a href="#" class="btn btn-lg btn-outline-dark">BMO</a>
				</div>*@
			</div>

			<div class="row mt-3">
				<div class="col-lg-5 p-0">
					<img class="img-fluid cursor-pointer" src="@Model.Imagem" alt="@Model.Nome">
				</div>
				<div class="col-lg-7 fs-5 mt-4">
					<p class="mb-3"><strong>Descrição:</strong>@Model.Descricao</p>
					<p class="fw-bold">Categoria</p>
					<div class="btn-group">
                        @foreach (var tipo in Model.Categoria)
                        {
						<a href="#" class="btn btn-lg text-white" style="background-color:@Cor(tipo)">
                            @tipo
                        </a>
                        }
                    </div>
				</div>
			</div>
		</section>