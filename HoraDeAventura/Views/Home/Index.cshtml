@model List<Personagem>
@{
    ViewData["Title"] = "Página inicial";
}

<section class="pt-5 pb-3 text-center container">
            <div class="row">
                <div class="col mx-auto">
                    <h1>Hora de Aventura</h1>
                    <div class="group">
                        <button id="btn-all" class="btn btn-md my-2 text-white bg-secondary btn-filter">Ver
                            Todos</button>
                        <button id="btn-aço" class="btn btn-sm my-2 text-white btn-filter"
                            style="background-color:#FFB0DD">Reino Doce</button>
                        <button id="btn-aço" class="btn btn-sm my-2 text-white btn-filter"
                            style="background-color:#6aa9e9">Reino Gelado</button>
                        <button id="btn-aço" class="btn btn-sm my-2 text-white btn-filter"
                            style="background-color:#afcdea">Personagens Principais</button>
                        <button id="btn-aço" class="btn btn-sm my-2 text-white btn-filter"
                            style="background-color:#000000">Outros</button>
                        <button id="btn-aço" class="btn btn-sm my-2 text-white btn-filter"
                            style="background-color:#800000">Entidade cósmica</button>
                        <button id="btn-aço" class="btn btn-sm my-2 text-white btn-filter"
                            style="background-color:#620096">Mágico</button>
                        <button id="btn-aço" class="btn btn-sm my-2 text-white btn-filter"
                            style="background-color:#ffc1d5">Princesas</button>
                    </div>
                </div>
            </div>
</section>

        <div class="album py-5 bg-light">
            <div class="container">

                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">

                @foreach (var Personagem in Model)
                {
                    <!-- Card Personagem - Inicio -->
                    <div class="col">
                        <div class="card shadow-sm cursor-pointer Personagens Principais" onclick="GetInfo(001)">
                            <img src="img/personagens/Finn.webp" class="card-img-top" width="100%" height="300"
                                alt="Finn" />
                            <div class="card-body">
                                <h3 class="card-title">Finn</h3>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a href="#" class="btn my-2 text-white" style="background-color:#afcdea">Personagens Principais</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Card personagem - Fim -->
                }

                    <div id="zeroPersonagens" class="col-lg-12 text-center" hidden>
                        <h1 class="my-3 text-danger">Nenhum personagem encontrado</h1>
                    </div>
                </div>


            </div>
        </div>

